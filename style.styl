html
  height: 100%

body
  height: 100%
  margin: 0

.editor
  font-family: Menlo, Consolas, Monaco, "Lucida Console", monospace
  line-height: 1.4em

.editor-wrap
  background-color: white
  width: 100%
  height: 100%
  position: relative

  & > div
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
